<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Littlenotes.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Littlenotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Settings">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Pivot>
            <PivotItem Header="General">
                <StackPanel VerticalAlignment="Top" Orientation="Horizontal">
                    <TextBox x:Name="CurrentFolder" Width="300" Margin="0,24,0,24" IsReadOnly="True"/>
                    <Button x:Name="PickFolderButton" Content="Browse" Click="Browse" Margin="24,0,0,0"/>
                </StackPanel>
            </PivotItem>

            <PivotItem Header="About">
                <TextBlock Text="LittleNotes 1.0" />
            </PivotItem>
        </Pivot>
        <Button x:Name="exit" Content="Close" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,24,24" Click="Exit" Padding="33,5,33,6"/>
    </Grid>
</Window>
