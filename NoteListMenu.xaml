<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Littlenotes.NoteListMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Littlenotes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page>
        <Grid Background="{ThemeResource AccentFillColorDefaultBrush}">
            <StackPanel VerticalAlignment="Top" x:Name="TopBar">
                <Grid>
                    <Border Padding="12" PointerPressed="ReturnToNotes"  PointerEntered="NoteHover" PointerExited="NoteHoverStop" HorizontalAlignment="Left">
                        <FontIcon x:Name="NoteList" Glyph="&#xE72B;" FontSize="24" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                    </Border>

                    <Border Padding="12" PointerPressed="OpenSettings" PointerEntered="NoteHover" PointerExited="NoteHoverStop" HorizontalAlignment="Right">
                        <FontIcon x:Name="Settings" Glyph="&#xE713;" FontSize="24" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                    </Border>
                </Grid>
            </StackPanel>
        </Grid>
    </Page>
</Page>
